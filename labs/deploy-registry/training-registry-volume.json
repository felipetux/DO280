{
    "apiVersion": "v1",
    "kind": "PersistentVolume",
    "metadata": {
        "name": "training-registry-volume",
        "labels": {
            "deploymentconfig": "docker-registry"
        }
    },
    "spec": {
        "capacity": {
            "storage": "10Gi"
        },
        "accessModes": [ "ReadWriteMany" ],
        "nfs": {
            "path": "/var/export/registryvol",
            "server": "master.lab.example.com"
        }
    }
}
